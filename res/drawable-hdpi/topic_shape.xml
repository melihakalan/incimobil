<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item android:state_pressed="true" >
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid
			    android:color="#6E6E6E" /> 
            <stroke
                android:width="2dp"
                android:color="#424242" />
            <corners
                android:radius="5dp" />
      		<padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>
    </item>
    
    <item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid
			    android:color="#2E2E2E" /> 
            <stroke
                android:width="2dp"
                android:color="#424242" />
            <corners
                android:radius="5dp" />
      		<padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
		</shape>
    </item>
    
</selector>

